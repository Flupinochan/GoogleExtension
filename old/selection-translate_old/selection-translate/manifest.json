{
  "manifest_version": 3,
  "name": "SelectionTranslate",
  "short_name": "SelectionTranslate",
  "version": "0.0.1",
  "version_name": "0.0.1",
  "description": "The text selected with the cursor will be automatically translated!",
  "author": "metalmental",
  "key": "",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "24": "images/icon-24.png",
      "32": "images/icon-32.png"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/main.js"
      ],
      "run_at": "document_end"
    }
  ]
}